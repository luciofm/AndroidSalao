<?xml version="1.0" encoding="utf-8"?>
<com.luciofm.presentation.androidsalao.presentation.SlideLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sap="http://schemas.android.com/apk/res/com.luciofm.presentation.androidsalao"
    android:id="@id/slide"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    sap:tweet="#TDC2012 #Android #FF @JakeWharton @cyrilmottier @lehtimaeki @MarkIAllison @romainguy @romannurik" >

    <com.luciofm.presentation.androidsalao.presentation.HighlightedTextView
        style="@style/Widget.TextView.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Presentation Software" />

    <com.luciofm.presentation.androidsalao.presentation.HighlightedTextView
        style="@style/Widget.TextView.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Custom Android Application"
        sap:showAnimation="@anim/fadein"
        sap:showPhase="1" />

    <com.luciofm.presentation.androidsalao.presentation.HighlightedTextView
        style="@style/Widget.TextView.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="All slides made up using Android Layouts"
        sap:showAnimation="@anim/fadein"
        sap:showPhase="1" />

    <com.luciofm.presentation.androidsalao.presentation.HighlightedTextView
        style="@style/Widget.TextView.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:text="Open-source"
        sap:showAnimation="@anim/fadein"
        sap:showPhase="2" />

    <com.luciofm.presentation.androidsalao.presentation.HighlightedTextView
        style="@style/Widget.TextView.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Source code for basic version soon on github.com/luciofm"
        sap:showAnimation="@anim/fadein"
        sap:showPhase="2" />

    <com.luciofm.presentation.androidsalao.presentation.HighlightedTextView
        style="@style/Widget.TextView.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        sap:showAnimation="@anim/fadein"
        sap:showPhase="3" />

    <com.luciofm.presentation.androidsalao.presentation.HighlightedTextView
        style="@style/Widget.TextView.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Based on Mark Allison's https://github.com/StylingAndroid/PresenterLite"
        sap:showAnimation="@anim/fadein"
        sap:showPhase="3" />

</com.luciofm.presentation.androidsalao.presentation.SlideLayout>
